<div class="card mb-3">
  <h2 class="card-header h4">
    City List #<%= city_list.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>City</dt>
      <dd><%= city_list.city_id %></dd>

      <dt>User</dt>
      <dd><%= city_list.user_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back city_list, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_city_list_url(city_list), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to city_list, method: :delete, data: { confirm: "Do you really want to delete this city_list?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(city_list.updated_at) %> ago
  </div>
</div>
