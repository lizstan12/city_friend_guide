<%= search_form_for @q, :class => collapse_search_form, :id => "entries_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :journal_cont, "Journal contains" %>
    <%= f.text_field :journal_cont, :class => "form-control", :placeholder => "Journal contains" %>
  </div>

  <div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :creator_first_name_cont, "Creator first_name contains" %>
    <%= f.text_field :creator_first_name_cont, :class => "form-control", :placeholder => "Creator first_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :category_art_design_cont, "Category art_design contains" %>
    <%= f.text_field :category_art_design_cont, :class => "form-control", :placeholder => "Category art_design contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "CityList Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='cityguidegteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cityguide_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "CityList Created at greater than or equal to", :data => {:target => '#cityguidegteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cityguidegteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='cityguidelteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :cityguide_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "CityList Created at less than or equal to", :data => {:target => '#cityguidelteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#cityguidelteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#cityguidegteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cityguidelteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#cityguidegteqcreated_atPicker').on("dp.change", function (e) {
              $('#cityguidelteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#cityguidelteqcreated_atPicker').on("dp.change", function (e) {
              $('#cityguidegteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/entries" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#entries_filters">
  Show filters
</a>
