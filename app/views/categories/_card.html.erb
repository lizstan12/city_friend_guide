<div class="card mb-3">
  <h2 class="card-header h4">
    Category #<%= category.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Art design</dt>
      <!-- Display art_design start -->
      <dd><%= category.art_design %></dd>
      <!-- Display art_design end -->

      <dt>Food</dt>
      <!-- Display food start -->
      <dd><%= category.food %></dd>
      <!-- Display food end -->

      <dt>Historical</dt>
      <!-- Display historical start -->
      <dd><%= category.historical %></dd>
      <!-- Display historical end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back category, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link category start -->
      <div class="col">
        <%= link_to edit_category_url(category), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link category end -->

      <!-- Delete link category start -->
      <div class="col">
        <%= link_to category, method: :delete, data: { confirm: "Do you really want to delete this category?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link category end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(category.updated_at) %> ago
  </div>
</div>
