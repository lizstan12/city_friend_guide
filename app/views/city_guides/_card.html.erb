<div class="card mb-3">
  <h2 class="card-header h4">
    City Guide #<%= city_guide.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Entry</dt>
      <!-- Display entry_id start -->
      <dd><%= city_guide.entry_id %></dd>
      <!-- Display entry_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back city_guide, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link city_guide start -->
      <div class="col">
        <%= link_to edit_city_guide_url(city_guide), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link city_guide end -->

      <!-- Delete link city_guide start -->
      <div class="col">
        <%= link_to city_guide, method: :delete, data: { confirm: "Do you really want to delete this city_guide?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link city_guide end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(city_guide.updated_at) %> ago
  </div>
</div>
